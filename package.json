{
  "name": "thgaac",
  "version": "1.0.0",
  "description": "Texas Holocaust, Genocide, and Antisemitism Advisory Commission website",
  "main": "index.js",
  "scripts": {
    "update": ".update/update.sh",
    "sync-db": ".update/scripts/sync-db.sh",
    "sync-assets": ".update/scripts/sync-assets.sh",
    "update/deploy": ".update/scripts/deploy.sh",
    "update/setup": ".update/scripts/interactive-setup.sh",
    "update/test-ssh": "echo 'Testing SSH connection...' && .update/scripts/test-ssh.sh",
    "update/logs": "ls -la .update/logs/ && echo 'Latest log:' && ls -t .update/logs/*.log 2>/dev/null | head -1 | xargs tail -20",
    "build": "cd public/assets && npm run build",
    "build/watch": "cd public/assets && gulp watch",
    "build/css": "cd public/assets && gulp compileCss",
    "build/js": "cd public/assets && gulp compileJs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/thgaac.git"
  },
  "keywords": [
    "craftcms",
    "thgaac",
    "website"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {},
  "engines": {
    "node": ">=14.0.0"
  }
}